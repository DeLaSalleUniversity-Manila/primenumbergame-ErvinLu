<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/textViewOpen"
        android:text="Is the following number Prime or Composite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00FFFF"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOpen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#FF9100" />

    <Button
        android:id="@+id/buttonPrime"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="PRIME"
        android:textStyle="bold|italic"
        android:onClick="onClickPrime"
        android:layout_below="@+id/textViewNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonComposite"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="COMPOSITE"
        android:textStyle="bold|italic"
        android:onClick="onClickComposite"
        android:layout_above="@+id/buttonStart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    
    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#0046FF"
        android:layout_below="@+id/buttonStart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GENERATE NUMBER"
        android:textStyle="bold|italic"
        android:onClick="onClickGenerate"
        android:layout_below="@+id/buttonPrime"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textViewName"
        android:text="by Ervin Lester Lu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewOpen"
        android:layout_alignEnd="@+id/textViewOpen"
        android:textColor="#FFF"/>

</RelativeLayout>
